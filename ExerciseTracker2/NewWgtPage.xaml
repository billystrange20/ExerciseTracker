<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExerciseTracker2.NewWgtPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame Padding="24" CornerRadius="0">
                <Label Text="New Weight" HorizontalTextAlignment="Center" FontSize="36"/>
            </Frame>

            <Label Text="Select a Date: " FontSize="18" />
            <DatePicker x:Name="datePicker"/>

            <Label Text="Weight (kg): " FontSize="18" />
            <Entry x:Name="avgWeight" Keyboard="Numeric"/>

            <Button Text="Add New Weight" Clicked="AddWeight_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>